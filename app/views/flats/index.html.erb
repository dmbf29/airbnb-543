<div class="container">
  <h1>Flats</h1>
  <div class="cards">
    <% @flats.each do |flat| %>
      <% p flat['imageUrl'] %>
      <% puts %>
      <div class="card-trip">
        <%= image_tag flat['imageUrl'], alt: "flat photo" %>
        <div class="card-trip-infos">
          <div>
            <h2><%= flat['name'] %></h2>
            <p>Description</p>
          </div>
          <h2 class="card-trip-pricing">$<%= flat['price'] %></h2>
        </div>
        <%= link_to "", flat_path(flat['id']), class: 'card-trip-link' %>
      </div>
    <% end %>
  </div>
</div>
